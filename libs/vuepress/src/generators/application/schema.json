{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "Application",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    },
    "vuepressVersion": {
      "description": "The version of VuePress that you want to start the project with.",
      "type": "number",
      "default": 0,
      "x-prompt": {
        "message": "Which version of VuePress would you like to use?",
        "type": "list",
        "items": [
          {
            "value": 1,
            "label": "1.x"
          },
          {
            "value": 2,
            "label": "2.x"
          }
        ]
      }
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["name"]
}
